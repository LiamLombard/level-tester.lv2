@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.

<http://lv2.liamlombard.me/level-tester>
  a lv2:SimulatorPlugin;
  lv2:binary <level-tester.so>;
  doap:name "Input and output level tester";
  doap:license <http://usefulinc.com/doap/licenses/gpl>;

	lv2:port [
		a lv2:AudioPort ,
			lv2:InputPort ;
		lv2:index 0 ;
		lv2:symbol "in" ;
		lv2:name "In"
	] , [
		a lv2:AudioPort ,
			lv2:OutputPort ;
		lv2:index 1 ;
		lv2:symbol "out" ;
		lv2:name "Out"
] .